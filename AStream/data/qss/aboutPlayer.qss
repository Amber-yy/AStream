QLabel
{
	font: 10pt "黑体";
	color: rgb(255, 255, 255);
}

QPushButton
{
	background-color: rgba(0,0,0,0.5);
	font: 14pt "华文隶书";
	color: rgb(0, 170, 255);
}

QPushButton:hover
{
	background: rgba(0,0,0,1);
	font: 14pt "华文隶书";
	color: rgb(0, 170, 255);
	border:1px solid #00f;
}

QPushButton:pressed
{
	background: rgba(0,0,0,0.7);
	font: 14pt "华文隶书";
	color: rgb(0, 170, 255);
	border:1px solid #00f;
}